{
  "name": "thorium",
  "version": "0.1.0",
  "private": true,
  "main": "app.js",
  "description": "React + GraphQL simulator controls",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thorium-Sim/thorium.git"
  },
  "author": "Alex Anderson <alexanderson1993@gmail.com>",
  "bugs": {
    "url": "https://github.com/Thorium-Sim/thorium/issues"
  },
  "homepage": "https://thorium.ralexanderson.com",
  "dependencies": {
    "apollo-upload-network-interface": "^1.0.4",
    "body-parser": "^1.16.1",
    "cors": "^2.8.1",
    "electron": "^1.6.8",
    "express": "^4.14.1",
    "express-status-monitor": "^0.1.9",
    "graphql": "^0.9.6",
    "graphql-server-express": "^0.6.0",
    "graphql-server-express-upload": "^1.0.0",
    "graphql-subscriptions": "^0.3.0",
    "graphql-tools": "^0.10.0",
    "jsonfile": "^2.4.0",
    "moment": "^2.18.1",
    "multer": "^1.3.0",
    "optics-agent": "^1.1.1",
    "s3": "^4.4.0",
    "scribe-js": "^2.0.4",
    "subscriptions-transport-ws": "^0.6.0",
    "three": "^0.85.2"
  },
  "scripts": {
    "start": "node scripts/start.js & nodemon ./server.js -e js,graphql --ignore snapshots/ --ignore src/ --exec babel-node",
    "build": "node scripts/build.js",
    "test": "node scripts/test.js --env=jsdom",
    "lint": "eslint .",
    "migrate": "nodemon ./server/helpers/migration.js --exec babel-node",
    "cloc": "cloc . --exclude-dir=node_modules,config,scripts"
  },
  "jest": {
    "moduleFileExtensions": [
      "jsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/FileStub.js",
      "^.+\\.css$": "<rootDir>/config/jest/CSSStub.js"
    },
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ],
    "testEnvironment": "node"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app"
    ],
    "globals": {
      "window": true,
      "log": true
    },
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0,
      "indent": 0,
      "import/namespace": 0,
      "max-len": 0,
      "comma-dangle": 0,
      "no-underscore-dangle": 0
    },
    "env": {
      "mocha": true
    }
  }
}
